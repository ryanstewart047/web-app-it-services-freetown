                    document.getElementById('repairResults').scrollIntoView({ behavior: 'smooth' });
                    
                    // Update the content with demo data
                    document.querySelector('#repairResults h2').textContent = `Repair #${repair.trackingId}`;
                    
                    // Update progress bar
                    const progressBar = document.querySelector('.bg-primary-950');
                    if (progressBar) {
                        progressBar.style.width = `${repair.progress}%`;
                    }
                    
                    // Update status info
                    const statusElements = document.querySelectorAll('#repairResults .text-lg.font-medium');
                    if (statusElements.length > 0) {
                        statusElements[0].textContent = repair.statusLabel;
                    }
                    
                    // Update estimated completion
                    if (repair.estimatedCompletion) {
                        const estimatedElement = document.querySelector('#repairResults .text-sm.text-gray-600');
                        if (estimatedElement) {
                            const date = new Date(repair.estimatedCompletion).toLocaleDateString();
                            estimatedElement.textContent = `Estimated completion: ${date}`;
                        }
                    }
                    
                    // Show demo notice
