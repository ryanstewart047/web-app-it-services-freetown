            font-size: 0.875rem;
            font-weight: 500;
        }
        .status-in-progress {
            background-color: #dbeafe;
            color: #1e40af;
        }
        .timeline-item {
            position: relative;
            padding-left: 2rem;
            padding-bottom: 1.5rem;
        }
        .timeline-item:before {
            content: '';
            position: absolute;
            left: 0.5rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: #e5e7eb;
        }
        .timeline-item:last-child:before {
            display: none;
        }
        .timeline-icon {
            position: absolute;
            left: 0;
            top: 0;
            width: 1.25rem;
            height: 1.25rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: white;
            border: 2px solid;
        }
        .timeline-completed {
            border-color: #10b981;
            color: #10b981;
        }
        .timeline-current {
            border-color: #3b82f6;
            color: #3b82f6;
        }
        .timeline-pending {
            border-color: #6b7280;
            color: #6b7280;
        }
        
        /* Language Toggle Styles */
        .language-toggle {
            transition: all 0.2s ease;
        }
        
        .language-toggle:hover {
            transform: translateY(-1px);
        }
        
        .language-toggle .flag {
            transition: transform 0.2s ease;
        }
        
        .language-toggle:hover .flag {
            transform: scale(1.1);
        }
    </style>
