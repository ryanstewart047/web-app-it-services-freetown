# Database (Use PostgreSQL for production, SQLite for local development)
DATABASE_URL="postgresql://user:password@host:port/database"
# For local development, use: DATABASE_URL="file:./dev.db"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="itservicesfreetown@gmail.com"
SMTP_PASS="your-gmail-app-password"
FROM_EMAIL="support@itservicesfreetown.com"

# Server-side GitHub Gist Configuration for Automatic Cloud Sync
# This enables bookings from ANY device to automatically appear in admin panel
GITHUB_GIST_ID="your_gist_id_here"
GITHUB_ACCESS_TOKEN="your_github_token_here"

# AI API (for AI troubleshooting) - Choose one
OPENAI_API_KEY="your-openai-api-key"
GEMINI_API_KEY="your-gemini-api-key"

# Facebook Integration
NEXT_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id-here"

# Next.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Socket.IO (for real-time features)
SOCKET_IO_SECRET="your-socket-secret"
