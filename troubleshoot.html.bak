<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Troubleshooting - IT Services Freetown</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: '#040e40',
                            50: '#f0f2ff',
                            100: '#e4e8ff',
                            900: '#1c1891',
                            950: '#040e40',
                        },
                        danger: {
                            DEFAULT: '#ff0000',
                            500: '#ff2323',
                            600: '#ff0000',
                        },
                    }
                }
            }
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .btn-primary {
            background-color: #040e40;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.2s;
        }
        .btn-primary:hover {
            background-color: rgba(4, 14, 64, 0.9);
        }
        .btn-secondary {
            background-color: #ff0000;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 500;
            transition: all 0.2s;
        }
        .btn-secondary:hover {
            background-color: rgba(255, 0, 0, 0.9);
        }
        .input-field {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            outline: none;
            transition: all 0.2s;
        }
        .input-field:focus {
            border-color: #040e40;
            box-shadow: 0 0 0 3px rgba(4, 14, 64, 0.1);
        }
        .card {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            border: 1px solid #f3f4f6;
        }
        .issue-button {
            padding: 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            transition: all 0.2s;
            cursor: pointer;
            text-align: left;
        }
        .issue-button:hover {
            border-color: #040e40;
            background-color: rgba(4, 14, 64, 0.02);
        }
        .step-card {
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: all 0.2s;
        }
        .step-completed {
            background-color: #f0fdf4;
            border-color: #22c55e;
        }
        .confidence-bar {
            background-color: #e5e7eb;
            height: 0.5rem;
            border-radius: 0.25rem;
            overflow: hidden;
        }
        .confidence-fill {
            height: 100%;
            background: linear-gradient(to right, #22c55e, #3b82f6);
            transition: width 0.3s ease;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex items-center">
                        <img src="assets/logo.png" alt="IT Services Freetown Logo" class="h-12 sm:h-14 w-auto">
                    </div>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="index.html" class="text-gray-700 hover:text-primary-950 px-3 py-2 text-sm font-medium"data-translate="nav.home">Home</a>
                    <a href="book-appointment.html" class="text-gray-700 hover:text-primary-950 px-3 py-2 text-sm font-medium"data-translate="nav.book">Book Appointment</a>
                    <a href="track-repair.html" class="text-gray-700 hover:text-primary-950 px-3 py-2 text-sm font-medium"data-translate="nav.track">Track Repair</a>
                    <a href="troubleshoot.html" class="text-primary-950 px-3 py-2 text-sm font-medium font-semibold"data-translate="nav.troubleshoot">Troubleshoot</a>
                    <a href="chat.html" class="text-gray-700 hover:text-primary-950 px-3 py-2 text-sm font-medium"data-translate="nav.chat">Chat Support</a>
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button id="mobile-menu-button" class="text-gray-700 hover:text-primary-950 focus:outline-none focus:text-primary-950">
                        <i id="menu-icon" class="fas fa-bars text-xl"></i>
                        <i id="close-icon" class="fas fa-times text-xl hidden"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="md:hidden hidden">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
                <a href="index.html" class="text-gray-700 hover:text-primary-950 block px-3 py-2 text-base font-medium"data-translate="nav.home">Home</a>
                <a href="book-appointment.html" class="text-gray-700 hover:text-primary-950 block px-3 py-2 text-base font-medium"data-translate="nav.book">Book Appointment</a>
                <a href="track-repair.html" class="text-gray-700 hover:text-primary-950 block px-3 py-2 text-base font-medium"data-translate="nav.track">Track Repair</a>
                <a href="troubleshoot.html" class="text-primary-950 block px-3 py-2 text-base font-medium font-semibold"data-translate="nav.troubleshoot">Troubleshoot</a>
                <a href="chat.html" class="text-gray-700 hover:text-primary-950 block px-3 py-2 text-base font-medium"data-translate="nav.chat">Chat Support</a>
            </div>
        </div>
    </nav>

    <div class="min-h-screen bg-gray-50 py-12">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <div class="flex justify-center mb-4">
                    <i class="fas fa-brain text-6xl text-primary-950"></i>
                </div>
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
                    AI-Powered Troubleshooting
                </h1>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Describe your device issue and get instant AI-powered repair suggestions and step-by-step solutions
                </p>
            </div>

            <!-- Troubleshooting Form -->
            <div class="card mb-8">
                <form id="troubleshootForm" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="deviceType" class="block text-sm font-medium text-gray-700 mb-2">
                                Device Type *
                            </label>
                            <select id="deviceType" class="input-field" required>
                                <option value="">Select device type</option>
                                <option value="computer">Computer/Laptop</option>
                                <option value="mobile">Mobile/Tablet</option>
                            </select>
                        </div>
                        <div>
                            <label for="deviceModel" class="block text-sm font-medium text-gray-700 mb-2">
                                Device Model (Optional)
                            </label>
                            <input
                                type="text"
                                id="deviceModel"
                                class="input-field"
                                placeholder="e.g., MacBook Pro 13, iPhone 12, Dell XPS"
                            />
                        </div>
                    </div>

                    <div>
                        <label for="issueDescription" class="block text-sm font-medium text-gray-700 mb-2">
                            Describe Your Issue *
                        </label>
                        <textarea
                            id="issueDescription"
                            rows="4"
                            class="input-field"
                            placeholder="Please describe the problem you're experiencing in detail..."
                            required
                        ></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full btn-primary flex items-center justify-center"
                    >
                        <i class="fas fa-brain mr-2"></i>
                        Get AI Diagnosis
                    </button>
                </form>
            </div>

            <!-- Common Issues -->
            <div class="card mb-8">
                <h2 class="text-xl font-bold text-gray-900 mb-6">Common Issues</h2>
                <p class="text-gray-600 mb-4">Click on a common issue to auto-fill the description:</p>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                            <i class="fas fa-desktop text-primary-950 mr-2"></i>
                            Computer
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                            <button class="issue-button" data-device="computer" data-issue="Computer won't turn on">
                                <span class="text-sm text-gray-700">Computer won't turn on</span>
                            </button>
                            <button class="issue-button" data-device="computer" data-issue="Blue screen of death (BSOD)">
                                <span class="text-sm text-gray-700">Blue screen of death (BSOD)</span>
                            </button>
                            <button class="issue-button" data-device="computer" data-issue="Computer running very slow">
                                <span class="text-sm text-gray-700">Computer running very slow</span>
                            </button>
                            <button class="issue-button" data-device="computer" data-issue="Computer overheating and shutting down">
                                <span class="text-sm text-gray-700">Computer overheating</span>
                            </button>
                            <button class="issue-button" data-device="computer" data-issue="No internet connection">
                                <span class="text-sm text-gray-700">No internet connection</span>
                            </button>
                            <button class="issue-button" data-device="computer" data-issue="Audio not working">
                                <span class="text-sm text-gray-700">Audio not working</span>
                            </button>
                        </div>
                    </div>

                    <div>
                        <h3 class="font-semibold text-gray-900 mb-3 flex items-center">
                            <i class="fas fa-mobile-alt text-primary-950 mr-2"></i>
                            Mobile
                        </h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                            <button class="issue-button" data-device="mobile" data-issue="Battery draining very quickly">
                                <span class="text-sm text-gray-700">Battery draining quickly</span>
                            </button>
                            <button class="issue-button" data-device="mobile" data-issue="Phone won't charge">
                                <span class="text-sm text-gray-700">Phone won't charge</span>
                            </button>
                            <button class="issue-button" data-device="mobile" data-issue="Screen not responding to touch">
                                <span class="text-sm text-gray-700">Screen not responding</span>
                            </button>
                            <button class="issue-button" data-device="mobile" data-issue="Apps keep crashing">
                                <span class="text-sm text-gray-700">Apps crashing</span>
                            </button>
                            <button class="issue-button" data-device="mobile" data-issue="No network signal">
                                <span class="text-sm text-gray-700">No network signal</span>
                            </button>
                            <button class="issue-button" data-device="mobile" data-issue="Phone overheating">
                                <span class="text-sm text-gray-700">Phone overheating</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- AI Response (Hidden by default) -->
            <div id="aiResponse" class="space-y-8" style="display: none;">
                <!-- Diagnosis Overview -->
                <div class="card">
                    <div class="flex items-center mb-6">
                        <i class="fas fa-brain text-3xl text-primary-950 mr-3"></i>
                        <div class="flex-1">
                            <h2 class="text-xl font-bold text-gray-900">AI Diagnosis</h2>
                            <div class="flex items-center space-x-4 mt-1">
                                <div class="flex items-center space-x-2">
                                    <span class="text-sm text-gray-600">Confidence:</span>
                                    <div class="confidence-bar w-20">
                                        <div class="confidence-fill" style="width: 87%"></div>
                                    </div>
                                    <span class="text-sm font-semibold text-gray-900">87%</span>
                                </div>
                                <span class="text-xs px-2 py-1 rounded-full bg-green-100 text-green-800">EASY</span>
                                <span class="text-sm text-gray-600">Est. Time: 15-30 minutes</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-blue-50 border-l-4 border-primary-950 p-4 rounded-r-lg">
                        <p class="text-gray-800" id="diagnosisText">
                            Based on your description, your laptop appears to be experiencing thermal throttling due to overheating. 
                            This is commonly caused by dust accumulation in the cooling system or failing thermal paste.
                        </p>
                    </div>
                </div>

                <!-- Troubleshooting Steps -->
                <div class="card">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">Step-by-Step Solution</h2>
                    <div class="space-y-4" id="stepsContainer">
                        <!-- Steps will be dynamically added here -->
                    </div>
                </div>

                <!-- Next Steps -->
                <div class="card">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">Still Need Help?</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="border border-gray-200 rounded-lg p-6">
                            <h3 class="font-semibold text-gray-900 mb-2">Book Professional Service</h3>
                            <p class="text-gray-600 text-sm mb-4">
                                If these steps don't resolve your issue, book an appointment with our technicians.
                            </p>
                            <a href="book-appointment.html" class="btn-primary text-sm px-4 py-2 inline-block">
                                Book Appointment
                            </a>
                        </div>
                        <div class="border border-gray-200 rounded-lg p-6">
                            <h3 class="font-semibold text-gray-900 mb-2">Live Chat Support</h3>
                            <p class="text-gray-600 text-sm mb-4">
                                Get instant help from our support team through live chat.
                            </p>
                            <a href="chat.html" class="btn-secondary text-sm px-4 py-2 inline-block">
                                Start Chat
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const menuIcon = document.getElementById('menu-icon');
            const closeIcon = document.getElementById('close-icon');

            mobileMenuButton.addEventListener('click', function() {
                const isHidden = mobileMenu.classList.contains('hidden');
                if (isHidden) {
                    mobileMenu.classList.remove('hidden');
                    menuIcon.classList.add('hidden');
                    closeIcon.classList.remove('hidden');
                } else {
                    mobileMenu.classList.add('hidden');
                    menuIcon.classList.remove('hidden');
                    closeIcon.classList.add('hidden');
                }
            });
        });

        const troubleshootingSteps = {
            'computer': {
                'overheating': [
                    {
                        title: 'Check System Temperature',
                        description: 'Download a temperature monitoring tool like HWiNFO64 or Core Temp to check your CPU and GPU temperatures. Temperatures above 80°C indicate overheating.',
                        icon: 'fas fa-thermometer-half'
                    },
                    {
                        title: 'Clean Air Vents',
                        description: 'Use compressed air to blow out dust from all air vents. Focus on the exhaust vents where hot air comes out.',
                        icon: 'fas fa-wind'
                    },
                    {
                        title: 'Check Task Manager',
                        description: 'Open Task Manager (Ctrl+Shift+Esc) and look for processes using high CPU. End unnecessary processes that are consuming resources.',
                        icon: 'fas fa-tasks'
                    },
                    {
                        title: 'Elevate Your Laptop',
                        description: 'Use a laptop stand or cooling pad to improve airflow underneath your laptop.',
                        icon: 'fas fa-laptop'
                    },
                    {
                        title: 'Update Drivers',
                        description: 'Update your graphics drivers and other system drivers as outdated drivers can cause excessive heat generation.',
                        icon: 'fas fa-download'
                    }
                ],
                'default': [
                    {
                        title: 'Restart Your Computer',
                        description: 'Sometimes a simple restart can resolve many common computer issues.',
                        icon: 'fas fa-redo'
                    },
                    {
                        title: 'Check All Connections',
                        description: 'Ensure all cables and connections are secure, including power, display, and peripheral devices.',
                        icon: 'fas fa-plug'
                    },
                    {
                        title: 'Run System Diagnostics',
                        description: 'Use built-in diagnostic tools to identify hardware or software issues.',
                        icon: 'fas fa-stethoscope'
                    },
                    {
                        title: 'Update Software',
                        description: 'Ensure your operating system and drivers are up to date.',
                        icon: 'fas fa-download'
                    }
                ]
            },
            'mobile': {
                'battery': [
                    {
                        title: 'Check Battery Usage',
                        description: 'Go to Settings > Battery to see which apps are consuming the most power.',
                        icon: 'fas fa-battery-half'
                    },
                    {
                        title: 'Enable Battery Saver Mode',
                        description: 'Turn on power saving mode to extend battery life.',
                        icon: 'fas fa-leaf'
                    },
                    {
                        title: 'Close Background Apps',
                        description: 'Close apps running in the background that you\'re not actively using.',
                        icon: 'fas fa-times-circle'
                    },
                    {
                        title: 'Reduce Screen Brightness',
                        description: 'Lower your screen brightness or enable auto-brightness to save power.',
                        icon: 'fas fa-adjust'
                    }
                ],
                'default': [
                    {
                        title: 'Restart Your Device',
                        description: 'Turn your device off and on again to clear temporary issues.',
                        icon: 'fas fa-power-off'
                    },
                    {
                        title: 'Check for Updates',
                        description: 'Update your apps and operating system to the latest version.',
                        icon: 'fas fa-download'
                    },
                    {
                        title: 'Free Up Storage',
                        description: 'Delete unnecessary files, photos, and apps to improve performance.',
                        icon: 'fas fa-hdd'
                    },
                    {
                        title: 'Reset Network Settings',
                        description: 'If having connectivity issues, try resetting your network settings.',
                        icon: 'fas fa-wifi'
                    }
                ]
            }
        };

        // Handle form submission
        document.getElementById('troubleshootForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const deviceType = document.getElementById('deviceType').value;
            const deviceModel = document.getElementById('deviceModel').value;
            const issueDescription = document.getElementById('issueDescription').value;
            
            if (!deviceType || !issueDescription.trim()) {
                alert('Please fill in all required fields');
                return;
            }
            
            // Show loading state
            const button = this.querySelector('button');
            const originalText = button.textContent;
            button.textContent = 'AI Analyzing...';
            button.disabled = true;
            button.classList.add('loading');
            
            // Simulate AI processing
            setTimeout(() => {
                button.textContent = originalText;
                button.disabled = false;
                button.classList.remove('loading');
                
                generateAIResponse(deviceType, issueDescription);
                document.getElementById('aiResponse').style.display = 'block';
                document.getElementById('aiResponse').scrollIntoView({ behavior: 'smooth' });
            }, 3000);
        });

        // Handle quick issue selection
        document.querySelectorAll('.issue-button').forEach(button => {
            button.addEventListener('click', function() {
                const device = this.dataset.device;
                const issue = this.dataset.issue;
                
                document.getElementById('deviceType').value = device;
                document.getElementById('issueDescription').value = issue;
            });
        });

        function generateAIResponse(deviceType, issue) {
            // Determine appropriate steps based on issue
            let steps;
            const issueLower = issue.toLowerCase();
            
            if (deviceType === 'computer') {
                if (issueLower.includes('overheating') || issueLower.includes('hot') || issueLower.includes('heat')) {
                    steps = troubleshootingSteps.computer.overheating;
                } else {
                    steps = troubleshootingSteps.computer.default;
                }
            } else {
                if (issueLower.includes('battery') || issueLower.includes('charge') || issueLower.includes('power')) {
                    steps = troubleshootingSteps.mobile.battery;
                } else {
                    steps = troubleshootingSteps.mobile.default;
                }
            }
            
            // Generate diagnosis text
            let diagnosis = `Based on your description of "${issue}", I've identified the most likely causes and solutions. `;
            if (deviceType === 'computer') {
                diagnosis += 'This appears to be a common computer issue that can often be resolved with the following steps.';
            } else {
                diagnosis += 'This is a typical mobile device issue that can usually be fixed with some basic troubleshooting.';
            }
            
            document.getElementById('diagnosisText').textContent = diagnosis;
            
            // Generate steps
            const stepsContainer = document.getElementById('stepsContainer');
            stepsContainer.replaceChildren(); // Modern alternative to innerHTML = ''
            
            steps.forEach((step, index) => {
                const stepDiv = document.createElement('div');
                stepDiv.className = 'step-card';
                
                // Create step content using DOM methods for security
                const stepWrapper = document.createElement('div');
                stepWrapper.className = 'flex items-start space-x-4';
                
                // Step number
                const stepNumber = document.createElement('div');
                stepNumber.className = 'flex-shrink-0 w-8 h-8 bg-primary-950 text-white rounded-full flex items-center justify-center text-sm font-semibold';
                stepNumber.textContent = index + 1;
                
                // Step content
                const stepContent = document.createElement('div');
                stepContent.className = 'flex-1';
                
                // Header with icon and title
                const stepHeader = document.createElement('div');
                stepHeader.className = 'flex items-center space-x-3 mb-2';
                
                const stepIcon = document.createElement('i');
                stepIcon.className = `${step.icon} text-primary-950`;
                
                const stepTitle = document.createElement('h3');
                stepTitle.className = 'font-semibold text-gray-900';
                stepTitle.textContent = step.title;
                
                const completeButton = document.createElement('button');
                completeButton.className = 'text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors';
                completeButton.textContent = 'Mark Complete';
                completeButton.onclick = function() { toggleStep(this); };
                
                stepHeader.appendChild(stepIcon);
                stepHeader.appendChild(stepTitle);
                stepHeader.appendChild(completeButton);
                
                // Description
                const stepDesc = document.createElement('p');
                stepDesc.className = 'text-gray-700';
                stepDesc.textContent = step.description;
                
                stepContent.appendChild(stepHeader);
                stepContent.appendChild(stepDesc);
                stepWrapper.appendChild(stepNumber);
                stepWrapper.appendChild(stepContent);
                stepDiv.appendChild(stepWrapper);
                stepsContainer.appendChild(stepDiv);
            });
        }

        function toggleStep(button) {
            const stepCard = button.closest('.step-card');
            const isCompleted = stepCard.classList.contains('step-completed');
            
            if (isCompleted) {
                stepCard.classList.remove('step-completed');
                button.textContent = 'Mark Complete';
                button.className = 'text-xs px-2 py-1 rounded-full bg-gray-100 text-gray-600 hover:bg-gray-200 transition-colors';
            } else {
                stepCard.classList.add('step-completed');
                button.textContent = 'Completed';
                button.className = 'text-xs px-2 py-1 rounded-full bg-green-100 text-green-800';
            }
        }
    </script>
</body>
</html>
</body>
</html>
