{
  "version": 2,
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.{png,jpg,jpeg,gif,svg,ico,css,js}",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "DATABASE_URL_PLACEHOLDER",
    "SMTP_HOST": "SMTP_HOST_PLACEHOLDER",
    "SMTP_PORT": "SMTP_PORT_PLACEHOLDER",
    "SMTP_SECURE": "SMTP_SECURE_PLACEHOLDER",
    "SMTP_USER": "SMTP_USER_PLACEHOLDER",
    "SMTP_PASSWORD": "SMTP_PASSWORD_PLACEHOLDER"
  }
}
