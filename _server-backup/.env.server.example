# Environment Variables for Server Deployment

# Copy this to .env.local for server deployment

# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database"

# AI Service (Google Gemini)
GEMINI_API_KEY="your-gemini-api-key-here"

# Email Service Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-gmail-app-password"

# Application URLs
NEXT_PUBLIC_BASE_URL="https://itservicesfreetown.com"
VERCEL_URL=""

# Optional: Socket.IO Configuration
SOCKET_IO_URL="https://your-socket-server.com"

# Optional: Notification Service
NOTIFICATION_WEBHOOK_URL="https://your-webhook-url.com"
